@using static IRRRL.Web.Pages.Veteran.Apply

<h4 class="mb-4">Current Loan Information</h4>

<EditForm Model="@Model" OnValidSubmit="HandleNext">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Current Loan Amount</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <InputNumber @bind-Value="Model.CurrentLoanAmount" class="form-control" placeholder="250000" />
            </div>
            <ValidationMessage For="@(() => Model.CurrentLoanAmount)" class="text-danger" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Current Interest Rate</label>
            <div class="input-group">
                <InputNumber @bind-Value="Model.CurrentInterestRate" class="form-control" placeholder="4.5" step="0.01" />
                <span class="input-group-text">%</span>
            </div>
            <ValidationMessage For="@(() => Model.CurrentInterestRate)" class="text-danger" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Current Monthly Payment (P&I)</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <InputNumber @bind-Value="Model.CurrentMonthlyPayment" class="form-control" placeholder="1500" />
            </div>
            <ValidationMessage For="@(() => Model.CurrentMonthlyPayment)" class="text-danger" />
            <small class="text-muted">Principal and Interest only (not including taxes/insurance)</small>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">How long ago did you get/refinance this loan?</label>
            <div class="row g-2">
                <div class="col-6">
                    <div class="input-group">
                        <InputNumber @bind-Value="yearsAgo" @bind-Value:after="CalculateRemainingTerm" class="form-control" placeholder="5" min="0" max="30" />
                        <span class="input-group-text">years</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-group">
                        <InputNumber @bind-Value="monthsAgo" @bind-Value:after="CalculateRemainingTerm" class="form-control" placeholder="6" min="0" max="11" />
                        <span class="input-group-text">months</span>
                    </div>
                </div>
            </div>
            @if (Model.RemainingTermMonths > 0)
            {
                <div class="mt-1"><small class="text-success">Remaining: ~@((Model.RemainingTermMonths/12)) years (@Model.RemainingTermMonths months)</small></div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">VA Loan Number</label>
            <InputText @bind-Value="Model.LoanNumber" class="form-control" placeholder="12-3456789" />
            <ValidationMessage For="@(() => Model.LoanNumber)" class="text-danger" />
            <small class="text-muted">Usually 8-12 digits (Example: 12-3456789 or 123456789012)</small>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Original Loan Date</label>
            <InputDate @bind-Value="Model.OriginalLoanDate" class="form-control" />
            <ValidationMessage For="@(() => Model.OriginalLoanDate)" class="text-danger" />
        </div>
    </div>

    <div class="alert alert-info">
        <strong>üí° Tip:</strong> You can find this information on your most recent mortgage statement.
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="button" class="btn btn-outline-secondary btn-lg" @onclick="HandleBack">
            ‚Üê Back
        </button>
        <button type="submit" class="btn btn-primary btn-lg">
            Next: Property Information ‚Üí
        </button>
    </div>
</EditForm>

@code {
    [Parameter] public ApplicationFormModel Model { get; set; } = new();
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnBack { get; set; }

    private int yearsAgo = 0;
    private int monthsAgo = 0;

    private void CalculateRemainingTerm()
    {
        // Calculate remaining term based on when they got the loan
        // Assuming original 30-year (360 month) term
        int totalMonthsPassed = (yearsAgo * 12) + monthsAgo;
        Model.RemainingTermMonths = Math.Max(360 - totalMonthsPassed, 0);
    }

    private async Task HandleNext()
    {
        await OnNext.InvokeAsync();
    }

    private async Task HandleBack()
    {
        await OnBack.InvokeAsync();
    }
}

