@using static IRRRL.Web.Pages.Veteran.Apply

<h4 class="mb-4">Current Loan Information</h4>

<EditForm Model="@Model" OnValidSubmit="HandleNext">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Current Loan Amount</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <InputNumber @bind-Value="Model.CurrentLoanAmount" class="form-control" placeholder="250000" />
            </div>
            <ValidationMessage For="@(() => Model.CurrentLoanAmount)" class="text-danger" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Current Interest Rate</label>
            <div class="input-group">
                <InputNumber @bind-Value="Model.CurrentInterestRate" class="form-control" placeholder="4.5" step="0.01" />
                <span class="input-group-text">%</span>
            </div>
            <ValidationMessage For="@(() => Model.CurrentInterestRate)" class="text-danger" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Current Monthly Payment (P&I)</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <InputNumber @bind-Value="Model.CurrentMonthlyPayment" class="form-control" placeholder="1500" />
            </div>
            <ValidationMessage For="@(() => Model.CurrentMonthlyPayment)" class="text-danger" />
            <small class="text-muted">Principal and Interest only (not including taxes/insurance)</small>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Remaining Term (Months)</label>
            <InputNumber @bind-Value="Model.RemainingTermMonths" class="form-control" placeholder="300" />
            <ValidationMessage For="@(() => Model.RemainingTermMonths)" class="text-danger" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">VA Loan Number</label>
            <InputText @bind-Value="Model.LoanNumber" class="form-control" placeholder="12-3456789" />
            <ValidationMessage For="@(() => Model.LoanNumber)" class="text-danger" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Original Loan Date</label>
            <InputDate @bind-Value="Model.OriginalLoanDate" class="form-control" />
            <ValidationMessage For="@(() => Model.OriginalLoanDate)" class="text-danger" />
        </div>
    </div>

    <div class="alert alert-info">
        <strong>ðŸ’¡ Tip:</strong> You can find this information on your most recent mortgage statement.
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary btn-lg">
            Next: Property Information â†’
        </button>
    </div>
</EditForm>

@code {
    [Parameter] public ApplicationFormModel Model { get; set; } = new();
    [Parameter] public EventCallback OnNext { get; set; }

    private async Task HandleNext()
    {
        await OnNext.InvokeAsync();
    }
}

