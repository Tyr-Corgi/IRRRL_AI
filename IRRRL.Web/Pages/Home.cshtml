@page "/Home"
@model IRRRL.Web.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IRRRL System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1>Welcome to IRRRL System!</h1>
                <p>You are logged in as: <strong>@User.Identity?.Name</strong></p>
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">Go to Blazor App</a>
                    <a href="/Account/Logout" class="btn btn-secondary">Logout</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

