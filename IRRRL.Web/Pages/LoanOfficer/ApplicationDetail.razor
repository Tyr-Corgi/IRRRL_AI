@page "/loanofficer/application/{ApplicationId:int}"
@attribute [Authorize(Roles = "LoanOfficer")]
@using Microsoft.AspNetCore.Authorization
@using static IRRRL.Web.Pages.Veteran.Apply
@using IRRRL.Web.Pages.LoanOfficer.Components
@inject NavigationManager NavigationManager

<PageTitle>Application Review - @applicationNumber</PageTitle>

@if (application == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading application details...</p>
    </div>
}
else
{
    <div class="container-fluid">
        <!-- Header with Status -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-outline-secondary btn-sm mb-2" @onclick="GoBack">
                            <span class="oi oi-arrow-left"></span> Back to Dashboard
                        </button>
                        <h2 class="mb-1">Application Review: @applicationNumber</h2>
                        <p class="text-muted">Veteran: <strong>@application.FirstName @application.LastName</strong> | Submitted: @submittedDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                    <div class="text-end">
                        <div class="mb-2">
                            <span class="badge @GetStatusBadgeClass(currentStatus) fs-6">@GetStatusDisplay(currentStatus)</span>
                        </div>
                        <button class="btn btn-primary" @onclick="() => showStatusModal = true">
                            <span class="oi oi-task"></span> Update Status
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs mb-4" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "overview" ? "active" : "")" @onclick='() => activeTab = "overview"'>
                    <span class="oi oi-eye"></span> Overview
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "documents" ? "active" : "")" @onclick='() => activeTab = "documents"'>
                    <span class="oi oi-document"></span> Documents @if (documentsNeededCount > 0) { <span class="badge bg-danger ms-1">@documentsNeededCount</span> }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "actions" ? "active" : "")" @onclick='() => activeTab = "actions"'>
                    <span class="oi oi-list-rich"></span> Action Items @if (openActionItemsCount > 0) { <span class="badge bg-warning text-dark ms-1">@openActionItemsCount</span> }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "calculator" ? "active" : "")" @onclick='() => activeTab = "calculator"'>
                    <span class="oi oi-calculator"></span> NTB Calculator
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link @(activeTab == "notes" ? "active" : "")" @onclick='() => activeTab = "notes"'>
                    <span class="oi oi-comment-square"></span> Notes @if (notesCount > 0) { <span class="badge bg-secondary ms-1">@notesCount</span> }
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            @if (activeTab == "overview")
            {
                <OverviewTab Application="@application" />
            }
            else if (activeTab == "documents")
            {
                <DocumentsTab ApplicationId="@ApplicationId" 
                             DocumentsNeededCount="@documentsNeededCount" 
                             DocumentsNeededCountChanged="@((int count) => documentsNeededCount = count)" />
            }
            else if (activeTab == "actions")
            {
                <ActionItemsTab ApplicationId="@ApplicationId" 
                               OpenItemsCount="@openActionItemsCount" 
                               OpenItemsCountChanged="@((int count) => openActionItemsCount = count)" />
            }
            else if (activeTab == "calculator")
            {
                <NTBCalculatorTab Application="@application" />
            }
            else if (activeTab == "notes")
            {
                <NotesTab ApplicationId="@ApplicationId" 
                         NotesCount="@notesCount" 
                         NotesCountChanged="@((int count) => notesCount = count)" />
            }
        </div>
    </div>
}

<!-- Status Update Modal -->
@if (showStatusModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Application Status</h5>
                    <button type="button" class="btn-close" @onclick="() => showStatusModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Current Status: <strong>@GetStatusDisplay(currentStatus)</strong></label>
                        <select class="form-select" @bind="newStatus">
                            <option value="New">New</option>
                            <option value="InProgress">In Progress</option>
                            <option value="DocumentsNeeded">Documents Needed</option>
                            <option value="ReadyForReview">Ready for Review</option>
                            <option value="Underwriting">Sent to Underwriting</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status Note (Optional)</label>
                        <textarea class="form-control" rows="3" @bind="statusNote" placeholder="Add a note about this status change..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" @onclick="() => showStatusModal = false">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="UpdateStatus">Update Status</button>
                </div>
            </div>
        </div>
    </div>
}

