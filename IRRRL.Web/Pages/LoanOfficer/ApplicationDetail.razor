        await Task.CompletedTask;
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/loanofficer/dashboard");
    }

    private async Task UpdateStatus()
    {
        // TODO: Save status to database
        currentStatus = newStatus;
        
        // TODO: If statusNote is provided, add it to notes
        if (!string.IsNullOrWhiteSpace(statusNote))
        {
            notesCount++;
        }
        
        showStatusModal = false;
        statusNote = "";
        
        await Task.CompletedTask;
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "New" => "bg-primary",
        "InProgress" => "bg-warning text-dark",
        "DocumentsNeeded" => "bg-danger",
        "ReadyForReview" => "bg-info",
        "Underwriting" => "bg-secondary",
        "Completed" => "bg-success",
        _ => "bg-secondary"
    };

    private string GetStatusDisplay(string status) => status switch
    {
        "New" => "New Application",
        "InProgress" => "In Progress",
        "DocumentsNeeded" => "Documents Needed",
        "ReadyForReview" => "Ready for Review",
        "Underwriting" => "Sent to Underwriting",
        "Completed" => "Completed",
