                Category = "Documents",
                IsAIGenerated = true,
                DueDate = DateTime.Now.AddDays(5),
                IsCompleted = false
            }
        };

        await Task.CompletedTask;
    }

    private async Task UpdateOpenItemsCount()
    {
        var count = actionItems.Count(i => !i.IsCompleted);
        if (count != OpenItemsCount)
        {
            OpenItemsCount = count;
            await OpenItemsCountChanged.InvokeAsync(OpenItemsCount);
        }
    }

    private async Task ToggleActionItem(int itemId)
    {
        var item = actionItems.FirstOrDefault(i => i.Id == itemId);
        if (item != null)
        {
            item.IsCompleted = !item.IsCompleted;
            item.CompletedDate = item.IsCompleted ? DateTime.Now : null;
            await UpdateOpenItemsCount();
        }
    }

    private async Task RegenerateActionItems()
    {
        // TODO: Call AI service to regenerate action items
        await JS.InvokeVoidAsync("alert", "AI Analysis Complete!\n\nGenerated 3 new action items:\n1. Follow up on COE disability rating\n2. Verify homeowner's insurance policy\n3. Request bank statements for assets verification");
        await LoadActionItems(); // Reload with new items
    }

    private async Task AddManualItem()
    {
        // TODO: Show modal to add custom action item
        await JS.InvokeVoidAsync("alert", "Add manual task dialog coming soon!");
    }

    private async Task EditActionItem(int itemId)
    {
        // TODO: Show edit modal
        await JS.InvokeVoidAsync("alert", $"Edit action item {itemId} - coming soon!");
    }

    private async Task DeleteActionItem(int itemId)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this action item?"))
        {
            var item = actionItems.FirstOrDefault(i => i.Id == itemId);
            if (item != null)
            {
                actionItems.Remove(item);
                await UpdateOpenItemsCount();
            }
        }
    }

    private string GetPriorityBadgeClass(string priority) => priority switch
    {
        "High" => "bg-danger",
        "Medium" => "bg-warning text-dark",
        "Low" => "bg-secondary",
        _ => "bg-secondary"
    };

    private int GetPriorityOrder(string priority) => priority switch
    {
        "High" => 3,
        "Medium" => 2,
        "Low" => 1,
        _ => 0
    };

    private class ActionItem
    {
        public int Id { get; set; }
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Priority { get; set; } = "Medium";
        public string Category { get; set; } = "";
        public bool IsAIGenerated { get; set; }
        public bool IsCompleted { get; set; }
        public DateTime? CompletedDate { get; set; }
        public DateTime? DueDate { get; set; }
        public string Notes { get; set; } = "";
    }
}

