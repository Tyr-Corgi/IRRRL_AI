@inject IJSRuntime JS

<div class="row">
    <div class="col-12">
        <div class="alert alert-warning mb-4">
            <h5><span class="oi oi-bolt"></span> AI-Generated Action Items</h5>
            <p class="mb-2">These tasks were automatically generated by analyzing the veteran's application and identifying potential issues, missing information, and next steps.</p>
            <button class="btn btn-sm btn-warning" @onclick="RegenerateActionItems">
                <span class="oi oi-reload"></span> Regenerate with AI
            </button>
        </div>
    </div>
</div>

<div class="row">
    <!-- Action Items List -->
    <div class="col-lg-8 mb-3">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><span class="oi oi-list-rich"></span> Your Action Items</h5>
                <div>
                    <button class="btn btn-sm btn-outline-secondary me-2" @onclick="() => showCompletedItems = !showCompletedItems">
                        @(showCompletedItems ? "Hide" : "Show") Completed
                    </button>
                    <button class="btn btn-sm btn-primary" @onclick="AddManualItem">
                        <span class="oi oi-plus"></span> Add Task
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                @if (filteredActionItems.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var item in filteredActionItems.OrderBy(i => i.IsCompleted).ThenByDescending(i => GetPriorityOrder(i.Priority)))
                        {
                            <div class="list-group-item @(item.IsCompleted ? "bg-light" : "")">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="action-@item.Id" checked="@item.IsCompleted" @onchange="() => ToggleActionItem(item.Id)">
                                            <label class="form-check-label @(item.IsCompleted ? "text-decoration-line-through text-muted" : "fw-bold")" for="action-@item.Id">
                                                @item.Title
                                            </label>
                                        </div>
                                        <div class="ms-4 mt-1">
                                            <small class="@(item.IsCompleted ? "text-muted" : "")">@item.Description</small>
                                            <div class="mt-2">
                                                <span class="badge @GetPriorityBadgeClass(item.Priority) me-2">@item.Priority Priority</span>
                                                <span class="badge bg-secondary me-2">@item.Category</span>
                                                @if (item.IsAIGenerated)
                                                {
                                                    <span class="badge bg-info"><span class="oi oi-bolt"></span> AI</span>
                                                }
                                                @if (!item.IsCompleted && item.DueDate.HasValue)
                                                {
                                                    var daysUntilDue = (item.DueDate.Value - DateTime.Now).Days;
                                                    var isOverdue = daysUntilDue < 0;
                                                    var isDueSoon = daysUntilDue >= 0 && daysUntilDue <= 2;
                                                    
                                                    <span class="badge @(isOverdue ? "bg-danger" : isDueSoon ? "bg-warning text-dark" : "bg-secondary") ms-2">
                                                        @if (isOverdue)
                                                        {
                                                            <span>‚ö†Ô∏è Overdue by @Math.Abs(daysUntilDue) day(s)</span>
                                                        }
                                                        else if (isDueSoon)
                                                        {
                                                            <span>Due in @daysUntilDue day(s)</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Due @item.DueDate.Value.ToString("MM/dd/yyyy")</span>
                                                        }
                                                    </span>
                                                }
                                            </div>
                                            @if (item.IsCompleted && item.CompletedDate.HasValue)
                                            {
                                                <div class="mt-1">
                                                    <small class="text-success">
                                                        <span class="oi oi-check"></span> Completed on @item.CompletedDate.Value.ToString("MM/dd/yyyy hh:mm tt")
                                                    </small>
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Notes))
                                            {
                                                <div class="mt-2 p-2 bg-light rounded">
                                                    <small><strong>Notes:</strong> @item.Notes</small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="btn-group ms-3">
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditActionItem(item.Id)">
                                            <span class="oi oi-pencil"></span>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteActionItem(item.Id)">
                                            <span class="oi oi-trash"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted">No action items. Great job! Click "Regenerate with AI" to check for new tasks.</p>
                    </div>
                }
            </div>
            @if (filteredActionItems.Any())
            {
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Progress:</strong> @actionItems.Count(i => i.IsCompleted) of @actionItems.Count tasks completed
                        </div>
                        <div>
                            <span class="badge bg-danger me-2">@actionItems.Count(i => i.Priority == "High" && !i.IsCompleted) High Priority</span>
                            <span class="badge bg-warning text-dark">@actionItems.Count(i => i.Priority == "Medium" && !i.IsCompleted) Medium Priority</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Action Item Summary & Tips -->
    <div class="col-lg-4 mb-3">
        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0"><span class="oi oi-graph"></span> Task Statistics</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="fs-3 fw-bold text-primary">@actionItems.Count(i => !i.IsCompleted)</div>
                        <small class="text-muted">Open Tasks</small>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="fs-3 fw-bold text-danger">@actionItems.Count(i => !i.IsCompleted && i.Priority == "High")</div>
                        <small class="text-muted">High Priority</small>
                    </div>
                    <div class="col-6">
                        <div class="fs-3 fw-bold text-warning">@actionItems.Count(i => i.DueDate.HasValue && (i.DueDate.Value - DateTime.Now).Days <= 2 && !i.IsCompleted)</div>
                        <small class="text-muted">Due Soon</small>
                    </div>
                    <div class="col-6">
                        <div class="fs-3 fw-bold text-success">@actionItems.Count(i => i.IsCompleted)</div>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h6 class="mb-0"><span class="oi oi-lightbulb"></span> AI Recommendations</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info p-2 mb-2">
                    <small><strong>üí° Next Best Action:</strong></small>
                    <div class="small mt-1">
                        @if (actionItems.Any(i => !i.IsCompleted))
                        {
                            var nextItem = actionItems.Where(i => !i.IsCompleted).OrderByDescending(i => GetPriorityOrder(i.Priority)).First();
                            <span>@nextItem.Title</span>
                        }
                        else
                        {
                            <span>All tasks complete! Consider moving to underwriting.</span>
                        }
                    </div>
                </div>
                <div class="alert alert-warning p-2 mb-0">
                    <small><strong>‚ö†Ô∏è Potential Issues:</strong></small>
                    <ul class="small mb-0 mt-1 ps-3">
                        <li>COE shows 30% disability - funding fee may be waived</li>
                        <li>Current address matches property - verify occupancy intent</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><span class="oi oi-info"></span> Quick Tips</h6>
            </div>
            <div class="card-body">
                <ul class="small mb-0 ps-3">
                    <li class="mb-2">Focus on high-priority items first</li>
                    <li class="mb-2">Use AI to regenerate tasks after major updates</li>
                    <li class="mb-2">Add notes to track your progress</li>
                    <li>Mark completed items to track productivity</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int ApplicationId { get; set; }

    [Parameter]
    public int OpenItemsCount { get; set; }

    [Parameter]
    public EventCallback<int> OpenItemsCountChanged { get; set; }

    private List<ActionItem> actionItems = new();
    private bool showCompletedItems = false;

    private List<ActionItem> filteredActionItems =>
        showCompletedItems ? actionItems : actionItems.Where(i => !i.IsCompleted).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadActionItems();
        await UpdateOpenItemsCount();
    }

    private async Task LoadActionItems()
    {
        // TODO: Load from database
